<h1>Login</h1>
<%= link_to 'Sign Up', signup_path %>

<%= form_with url: login_path, method: :post do %>
  <div>
    <%= label_tag :email, 'Email' %>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password, 'Senha' %>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag 'Entrar' %>
  </div>
<% end %>
